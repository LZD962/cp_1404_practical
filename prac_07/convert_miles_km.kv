BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: mile
            on_text: app.handle_calculate(self.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(mile.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(mile.text, -1)
    Button:
        text: 'Convert m to km'
        on_press: app.handle_calculate(mile.text)
    Label:
        id: output_label
        text: app.km_str
        color: (1, 1, 0, 1)